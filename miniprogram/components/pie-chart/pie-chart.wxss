/* components/pie-chart/pie-chart.wxss */
.pie-chart-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.pie-canvas {
  margin: 20rpx auto;
}

.pie-legend {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
  gap: 40rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
}

.legend-color.submitted {
  background-color: #10b981;
}

.legend-color.pending {
  background-color: #f59e0b;
}

.legend-text {
  font-size: 28rpx;
  color: #4b5563;
}