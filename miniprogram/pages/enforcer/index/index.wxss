/* miniprogram/pages/enforcer/index/index.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.header {
  padding: 30rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 统计卡片样式 */
.stats-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  background: #fff;
  padding: 40rpx 30rpx;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  transition: transform 0.3s ease;
}

.stat-card:active {
  transform: scale(0.98);
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #1890ff;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
  display: block;
}

/* 合规率卡片样式 */
.compliance-container {
  padding: 20rpx;
}

.compliance-card {
  background: #fff;
  padding: 40rpx 30rpx;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.compliance-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.compliance-rate {
  font-size: 60rpx;
  font-weight: bold;
  color: #52c41a;
  margin-bottom: 20rpx;
}

.compliance-detail {
  display: flex;
  justify-content: space-around;
  font-size: 26rpx;
  color: #666;
}