/* pages/enforcer/inspection/detail.wxss */
.container {
  padding: 30rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

/* 加载和错误状态 */
.loading-container, .error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading, .error-message {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.btn-retry {
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 8rpx;
}

/* 基本信息卡片 */
.info-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.company-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.inspection-type, .inspection-date, .inspection-status, 
.inspection-description, .inspection-basis, .inspection-completed {
  display: flex;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.label {
  width: 200rpx;
  color: #666;
  font-size: 28rpx;
}

.value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

.status-completed {
  color: #52c41a;
}

.status-pending {
  color: #faad14;
}

/* 部分标题 */
.section-title {
  font-size: 30rpx;
  font-weight: 500;
  margin: 40rpx 0 20rpx;
  color: #333;
}

/* 问题列表 */
.problems-container {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.problem-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.problem-item:last-child {
  border-bottom: none;
}

.problem-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.problem-type {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.severity {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.severity-high {
  background: #ffccc7;
  color: #f5222d;
}

.severity-medium {
  background: #fff7e6;
  color: #fa8c16;
}

.severity-low {
  background: #f6ffed;
  color: #52c41a;
}

.problem-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 照片网格 */
.photos-container {
  margin-bottom: 30rpx;
}

.photo-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.photo-item {
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.photo {
  width: 100%;
  height: 340rpx;
  display: block;
}

.photo-description {
  padding: 10rpx 16rpx;
  font-size: 24rpx;
  color: #666;
  background: rgba(255, 255, 255, 0.9);
}

/* 无数据提示 */
.no-data {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 28rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}