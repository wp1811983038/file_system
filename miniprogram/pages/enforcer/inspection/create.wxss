/* pages/enforcer/inspection/create.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin: 30rpx 0;
  color: #333;
}

.company-info {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.company-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.company-address {
  font-size: 28rpx;
  color: #666;
}

.form-container {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.form-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.required:after {
  content: '*';
  color: #ff4d4f;
  margin-left: 8rpx;
}

.form-content {
  position: relative;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333;
  background: #f8f8f8;
  padding: 0 20rpx;
  border-radius: 8rpx;
}

.placeholder {
  color: #999;
}

.description-textarea {
  width: 100%;
  height: 200rpx;
  font-size: 30rpx;
  line-height: 1.5;
  padding: 20rpx;
  box-sizing: border-box;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.form-tips {
  padding: 20rpx 30rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #faad14;
  display: flex;
  align-items: center;
}

.tip-text:before {
  content: '!';
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background: #faad14;
  color: #fff;
  border-radius: 50%;
  margin-right: 10rpx;
  font-weight: bold;
}

.footer-btn-container {
  padding: 40rpx 30rpx;
  position: sticky;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
}

.primary-btn {
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

.primary-btn[disabled] {
  background: #9be6bb !important;
  color: #fff !important;
}