/* pages/enforcer/inspection/list.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 筛选栏 */
.filter-bar {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.filter-tabs {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab.active:after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

.search-box icon {
  margin-right: 10rpx;
}

.search-box input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}

/* 检查列表 */
.inspection-list {
  margin-bottom: 20rpx;
}

.inspection-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.company-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.company-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status-badge {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.status-badge.pending {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

.status-badge.completed {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.inspection-meta {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.inspection-type {
  font-size: 28rpx;
  color: #1890ff;
  background: rgba(24, 144, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 20rpx;
}

.inspection-time {
  font-size: 26rpx;
  color: #999;
}

.inspection-desc {
  font-size: 28rpx;
  color: #666;
  background: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.inspection-stats {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
}

.item-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

.action-btn.execute {
  background: #07c160;
  color: #fff;
}

.action-btn.view {
  background: #1890ff;
  color: #fff;
}

/* 空列表提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx;
  color: #07c160;
  font-size: 28rpx;
}