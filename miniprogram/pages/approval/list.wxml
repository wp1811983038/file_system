<view class="container">
  <view class="tabs">
    <view class="tab {{activeTab === 'pending' ? 'active' : ''}}" 
          data-tab="pending" 
          bindtap="switchTab">
      待处理
    </view>
    <view class="tab {{activeTab === 'processed' ? 'active' : ''}}" 
          data-tab="processed" 
          bindtap="switchTab">
      已处理
    </view>
  </view>
  
  <view class="approval-list" wx:if="{{activeTab === 'pending'}}">
    <view class="no-data" wx:if="{{!pendingApprovals.length}}">
      <text>暂无待处理的审批</text>
    </view>
    
    <view class="approval-item" wx:for="{{pendingApprovals}}" wx:key="approval_id" bindtap="viewApprovalDetail" data-id="{{item.approval_id}}">
      <view class="approval-content">
        <view class="approval-title">{{item.filename}}</view>
        <view class="approval-info">
          <text>提交人: {{item.submitter}}</text>
          <text>模板: {{item.template_name}}</text>
          <text>提交时间: {{item.submitted_date}}</text>
        </view>
      </view>
      <view class="approval-action">
        <text class="icon-right">></text>
      </view>
    </view>
  </view>
  
  <view class="approval-list" wx:if="{{activeTab === 'processed'}}">
    <view class="no-data" wx:if="{{!processedApprovals.length}}">
      <text>暂无已处理的审批</text>
    </view>
    
    <view class="approval-item" wx:for="{{processedApprovals}}" wx:key="approval_id" bindtap="viewApprovalDetail" data-id="{{item.approval_id}}">
      <view class="approval-content">
        <view class="approval-title">{{item.filename}}</view>
        <view class="approval-info">
          <text>提交人: {{item.submitter}}</text>
          <text>模板: {{item.template_name}}</text>
          <text>处理时间: {{item.approval_date}}</text>
        </view>
      </view>
      <view class="approval-status">
        <text class="status {{item.status === 'approved' ? 'approved' : 'rejected'}}">
          {{item.status === 'approved' ? '已通过' : '已拒绝'}}
        </text>
      </view>
    </view>
  </view>
</view>