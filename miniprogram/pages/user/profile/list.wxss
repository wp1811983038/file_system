.container {
  padding: 0;
  background: #f5f7fa;
  min-height: 100vh;
  /* 添加底部安全距离，确保内容不会被TabBar覆盖 */
  padding-bottom: calc(96rpx + env(safe-area-inset-bottom));
}

/* 个人信息头部区域 */
.profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx 40rpx;
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.avatar-container {
  margin-bottom: 30rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  background-color: #fff;
}

.user-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.username-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.username {
  font-size: 36rpx;
  font-weight: 500;
  margin-right: 10rpx;
}

.expand-icon {
  font-size: 24rpx;
  transition: transform 0.3s;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

/* 展开的详细信息 */
.expanded-info {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  transition: all 0.3s;
  overflow: hidden;
}

.expanded-info.show {
  max-height: 300rpx;
  opacity: 1;
  margin-top: 20rpx;
}

.expanded-info.hide {
  max-height: 0;
  opacity: 0;
  padding-top: 0;
  padding-bottom: 0;
  margin-top: 0;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  width: 160rpx;
}

.info-value {
  font-size: 28rpx;
  color: #fff;
  flex: 1;
}

/* 操作菜单区域 */
.action-menu {
  padding: 20rpx 0;
  background: #fff;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-icon-container {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

.arrow-icon {
  color: #ccc;
  font-size: 28rpx;
}

.logout .menu-text {
  color: #ff4d4f;
}

/* 成功提示 */
.success-tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.success-tip.show {
  opacity: 1;
}

/* 适配深色模式 */
@media (prefers-color-scheme: dark) {
  .container {
    background: #1f1f1f;
  }
  
  .action-menu {
    background: #2c2c2c;
  }
  
  .menu-item {
    border-bottom: 1rpx solid #383838;
  }
  
  .menu-item:active {
    background-color: #333;
  }
  
  .menu-text {
    color: #e0e0e0;
  }
  
  .arrow-icon {
    color: #666;
  }
}