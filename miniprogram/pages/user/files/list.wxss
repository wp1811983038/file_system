/* 状态标签样式 */
.status-badge {
  display: inline-block;
  padding: 4rpx 10rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: normal;
  min-width: 80rpx;
  text-align: center;
}

.status-draft {
  background: #f0f0f0;
  border: 1rpx solid #d9d9d9;
  color: #666;
}

.status-submitted {
  background: #e6f7ff;
  border: 1rpx solid #91d5ff;
  color: #1890ff;
}

.status-under-review {
  background: #fff7e6;
  border: 1rpx solid #ffd591;
  color: #fa8c16;
}

.status-approved {
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
  color: #52c41a;
}

.status-rejected {
  background: #fff1f0;
  border: 1rpx solid #ffa39e;
  color: #f5222d;
}

/* 新增按钮样式 */
.info-btn {
  background: #1890ff !important;
  color: #fff !important;
}

.warning-btn {
  background: #faad14 !important;
  color: #fff !important;
}

.success-btn {
  background: #52c41a !important;
  color: #fff !important;
}

/* 审批进度模态框样式 */
.approval-modal .modal-content {
  max-height: 80vh;
  overflow-y: auto;
}

.status-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.approval-steps {
  margin: 30rpx 0;
}

.approval-step {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.approval-step:last-child {
  border-bottom: none;
}

.approval-step::before {
  content: '';
  position: absolute;
  left: 20rpx;
  top: 60rpx;
  bottom: 0;
  width: 2rpx;
  background-color: #e8e8e8;
  z-index: 1;
}

.approval-step:last-child::before {
  display: none;
}

.approval-step.approved .step-number {
  background-color: #52c41a;
  color: white;
}

.approval-step.rejected .step-number {
  background-color: #f5222d;
  color: white;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
  z-index: 2;
  position: relative;
}

.step-info {
  flex: 1;
  margin-right: 20rpx;
}

.step-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.step-date {
  font-size: 24rpx;
  color: #999;
}

.step-comment {
  background: #f9f9f9;
  padding: 12rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 6rpx;
}

.step-status {
  width: 100rpx;
  text-align: right;
}

.status-text {
  font-size: 24rpx;
}

.status-text.pending {
  color: #999;
}

.status-text.approved {
  color: #52c41a;
}

.status-text.rejected {
  color: #f5222d;
}

/* 文件查看模态框样式 */
.file-view-options {
  display: flex;
  justify-content: space-around;
  margin: 30rpx 0;
}

.preview-btn {
  background: #1890ff !important;
  color: white !important;
}