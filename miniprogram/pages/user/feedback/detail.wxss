.container {
  padding: 24rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.feedback-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.type-tag {
  padding: 8rpx 20rpx;
  background-color: #e6f7ff;
  color: #1890ff;
  border-radius: 6rpx;
  font-size: 26rpx;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
}

.status-tag.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.status-tag.processing {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-tag.resolved {
  background-color: #f6ffed;
  color: #52c41a;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 10rpx;
  bottom: 10rpx;
  width: 6rpx;
  background: #1890ff;
  border-radius: 3rpx;
}

.content-section {
  margin-bottom: 32rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  padding: 0 8rpx;
  word-break: break-all;
  white-space: pre-wrap;
}

.image-section {
  margin-top: 24rpx;
  margin-bottom: 32rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.feedback-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
}

.reply-section {
  margin-bottom: 32rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.reply-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
  white-space: pre-wrap;
}

.card-footer {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
}

.time {
  margin-bottom: 8rpx;
}

/* 适配深色模式 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1f1f1f;
  }
  
  .feedback-card {
    background-color: #2c2c2c;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  }
  
  .section-title {
    color: #e0e0e0;
  }
  
  .content-text, .reply-content {
    color: #d0d0d0;
  }
  
  .reply-section {
    background-color: #333333;
  }
  
  .feedback-image {
    border-color: #444;
  }
}