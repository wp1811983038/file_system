.container {
  padding: 30rpx;
  background: #f0f2f5;
  min-height: 100vh;
}

.feedback-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.card-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 40rpx;
  position: relative;
  padding-left: 24rpx;
}

.card-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  bottom: 6rpx;
  width: 8rpx;
  background: #1890ff;
  border-radius: 4rpx;
}

.form-group {
  margin-bottom: 30rpx;
  position: relative;
}

.form-group:last-of-type {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background: #fff;
  transition: all 0.3s;
  box-sizing: border-box;
}

.input:focus {
  border-color: #1890ff;
  box-shadow: 0 0 0 4rpx rgba(24, 144, 255, 0.2);
}

.picker-view {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background: #fff;
  transition: all 0.3s;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.placeholder {
  color: #999;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.textarea {
  width: 100%;
  height: 240rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  background: #fff;
  transition: all 0.3s;
  box-sizing: border-box;
}

.textarea:focus {
  border-color: #1890ff;
  box-shadow: 0 0 0 4rpx rgba(24, 144, 255, 0.2);
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.upload-area {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  border: 2rpx solid #eee;
}

.delete-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  z-index: 2;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.upload-icon {
  font-size: 48rpx;
  color: #bbb;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

.btn {
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.btn-primary {
  background: #1890ff;
  color: #fff;
}

.btn-primary:active {
  background: #096dd9;
}

.error-message {
  color: #f5222d;
  font-size: 24rpx;
  margin-top: 8rpx;
  padding-left: 12rpx;
}

.global-error {
  margin: 30rpx auto;
  padding: 20rpx;
  background-color: #fff2f0;
  border: 1rpx solid #ffccc7;
  color: #f5222d;
  border-radius: 8rpx;
  font-size: 28rpx;
  max-width: 90%;
  text-align: center;
}

.success-tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.success-tip.show {
  opacity: 1;
}

/* 适配深色模式 */
@media (prefers-color-scheme: dark) {
  .container {
    background: #1f1f1f;
  }
  
  .feedback-card {
    background: #2c2c2c;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  }
  
  .card-title {
    color: #e0e0e0;
  }
  
  .label {
    color: #b0b0b0;
  }
  
  .input, .textarea, .picker-view {
    background: #3a3a3a;
    border-color: #505050;
    color: #e0e0e0;
  }
  
  .input:focus, .textarea:focus {
    border-color: #177ddc;
    box-shadow: 0 0 0 4rpx rgba(24, 144, 255, 0.15);
  }
  
  .upload-btn {
    border-color: #505050;
  }
  
  .upload-icon, .upload-text, .upload-tip, .textarea-counter {
    color: #888;
  }
}