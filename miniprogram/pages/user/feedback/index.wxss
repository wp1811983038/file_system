.container {
  padding: 24rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

/* 顶部操作栏 */
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.add-btn {
  padding: 12rpx 24rpx;
  background-color: #07c160;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 筛选区域 */
.filter-section {
  margin-bottom: 24rpx;
}

.filter-scroll {
  white-space: nowrap;
  height: 80rpx;
}

.filter-item-container {
  display: inline-block;
  position: relative;
  margin-right: 16rpx;
}

.filter-item {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  background-color: #f0f0f0;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
}

.filter-item.active {
  background-color: #07c160;
  color: white;
}

.filter-item.custom {
  background-color: #e6f7ff;
  color: #1890ff;
}

.type-delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

/* 反馈卡片 */
.feedback-list {
  padding-bottom: 24rpx;
}

.feedback-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.type-tag {
  padding: 6rpx 16rpx;
  background-color: #e6f7ff;
  color: #1890ff;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.status-tag.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.status-tag.processing {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-tag.resolved {
  background-color: #f6ffed;
  color: #52c41a;
}

.card-content {
  margin-bottom: 24rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  background-color: transparent;
  border: 2rpx solid #f5222d;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  width: 36rpx; /* 增加图标尺寸 */
  height: 36rpx; /* 增加图标尺寸 */
}

/* 空状态 */
.empty-tip {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}

.empty-icon {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 24rpx;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: white;
  border-radius: 12rpx;
  padding: 32rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.picker {
  height: 80rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 16rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.input-area {
  width: 100%;
  height: 240rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 16rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.input {
  height: 80rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
}

.form-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 32rpx;
}

.cancel-btn, .confirm-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #07c160;
  color: white;
}

/* 上传图片相关样式 */
.upload-area {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  border: 2rpx solid #eee;
}

.image-item .delete-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  z-index: 2;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.upload-icon {
  font-size: 48rpx;
  color: #bbb;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}