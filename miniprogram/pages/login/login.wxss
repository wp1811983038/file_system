page {
  background-color: #f6f6f6;
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.logo {
  margin: 60rpx 0 40rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.logo image {
  width: 100%;
  height: 100%;
}

.card {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.form {
  width: 100%;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group.input-error .input-wrapper {
  border-color: #e74c3c;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.input-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: #fff;
  transition: all 0.3s;
}

.input-wrapper:focus-within {
  border-color: #07c160;
  box-shadow: 0 0 0 2rpx rgba(7, 193, 96, 0.2);
}

input {
  flex: 1;
  height: 100%;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: transparent;
  border: none;
}

.clear-icon {
  padding: 0 20rpx;
  color: #999;
}

.error-text {
  font-size: 24rpx;
  color: #e74c3c;
  margin-top: 8rpx;
  padding-left: 10rpx;
}

.options-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.checkbox-group {
  display: flex;
  align-items: center;
}

.checkbox-group text {
  font-size: 26rpx;
  color: #666;
  margin-left: 8rpx;
}

/* 移除忘记密码按钮样式 */

.login-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  font-weight: 500;
  transition: all 0.3s;
  border: none;
}

.login-btn.loading {
  background: #07c160;
  opacity: 0.8;
}

.login-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.loading-icon {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 移除注册链接样式 */

.footer {
  margin-top: 60rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}