.container {
  padding: 30rpx;
  background: #f0f2f5;
  min-height: 100vh;
  padding-bottom: calc(96rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.settings-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.card-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 40rpx;
  position: relative;
  padding-left: 24rpx;
}

.card-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  bottom: 6rpx;
  width: 8rpx;
  background: #1890ff;
  border-radius: 4rpx;
}

.form-group {
  margin-bottom: 30rpx;
  position: relative;
}

.form-group:last-of-type {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background: #fff;
  transition: all 0.3s;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 240rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  background: #fff;
  transition: all 0.3s;
  box-sizing: border-box;
}

.input:focus, .textarea:focus {
  border-color: #1890ff;
  box-shadow: 0 0 0 4rpx rgba(24, 144, 255, 0.2);
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.form-preview {
  margin-bottom: 40rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  border-left: 4rpx solid #1890ff;
}

.preview-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.preview-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  min-height: 80rpx;
  word-break: break-all;
  white-space: pre-wrap;
}

.btn {
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.btn-primary {
  background: #1890ff;
  color: #fff;
}

.btn-primary:active {
  background: #096dd9;
}

.btn-primary[disabled] {
  background: #a5cdfa;
  color: #fff;
}

.logout-section {
  margin: 60rpx 0;
  display: flex;
  justify-content: center;
}

.btn-logout {
  background: #ff4d4f;
  color: #fff;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-logout:active {
  background: #cf1322;
}

.error-message {
  color: #f5222d;
  font-size: 24rpx;
  margin-top: 8rpx;
  padding-left: 12rpx;
}

.global-error {
  margin: 30rpx auto;
  padding: 20rpx;
  background-color: #fff2f0;
  border: 1rpx solid #ffccc7;
  color: #f5222d;
  border-radius: 8rpx;
  font-size: 28rpx;
  max-width: 90%;
  text-align: center;
}

.success-tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.success-tip.show {
  opacity: 1;
}