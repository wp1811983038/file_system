.container {
  padding: 24rpx;
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: calc(96rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* 用户信息卡片样式 */
.user-profile-card {
  background: linear-gradient(135deg, #1890ff, #096dd9);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  color: #fff;
  overflow: hidden;
  position: relative;
}

.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  background-color: rgba(255, 255, 255, 0.2);
}

.avatar-edit-badge {
  position: absolute;
  right: -6rpx;
  bottom: -6rpx;
  width: 40rpx;
  height: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.edit-icon {
  width: 24rpx;
  height: 24rpx;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.user-role {
  font-size: 26rpx;
  opacity: 0.9;
}

.profile-detail {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.9;
}

.detail-text {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 部分标题 */
.section-title {
  font-size: 28rpx;
  color: #999;
  padding: 30rpx 20rpx 16rpx;
  font-weight: 500;
}

/* 菜单卡片 */
.menu-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
  overflow: hidden;
}

.menu-item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-value {
  font-size: 26rpx;
  color: #999;
  margin-right: 12rpx;
  max-width: 240rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.arrow-icon {
  color: #ccc;
  font-size: 28rpx;
}

/* 退出登录 */
.logout-section {
  margin: 60rpx 0;
  display: flex;
  justify-content: center;
}

.btn-logout {
  background: #ff4d4f;
  color: #fff;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-logout:active {
  background: #cf1322;
}

/* 适配深色模式 */
@media (prefers-color-scheme: dark) {
  .container {
    background: #1f1f1f;
  }
  
  .user-profile-card {
    background: linear-gradient(135deg, #177ddc, #0e5aa7);
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
  }
  
  .section-title {
    color: #aaa;
  }
  
  .menu-card {
    background: #2c2c2c;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  
  .menu-item {
    border-bottom: 1rpx solid #383838;
  }
  
  .menu-item:active {
    background-color: #333;
  }
  
  .menu-text {
    color: #e0e0e0;
  }
  
  .menu-value {
    color: #888;
  }
  
  .arrow-icon {
    color: #666;
  }
}