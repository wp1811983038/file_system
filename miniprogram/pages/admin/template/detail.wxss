/* 状态标签样式 */
.status-badge {
  display: inline-block;
  padding: 4rpx 10rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: normal;
  min-width: 80rpx;
  text-align: center;
}

.status-draft {
  background: #f0f0f0;
  border: 1rpx solid #d9d9d9;
  color: #666;
}

.status-submitted {
  background: #e6f7ff;
  border: 1rpx solid #91d5ff;
  color: #1890ff;
}

.status-under-review {
  background: #fff7e6;
  border: 1rpx solid #ffd591;
  color: #fa8c16;
}

.status-approved {
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
  color: #52c41a;
}

.status-rejected {
  background: #fff1f0;
  border: 1rpx solid #ffa39e;
  color: #f5222d;
}

/* 审批按钮样式 */
.approve-btn {
  background: #fa8c16 !important;
  color: white !important;
}

/* 审批模态框样式 */
.approval-modal .modal-content {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #f9fafb;
  border-bottom: 1rpx solid #e5e7eb;
}

.modal-header text:first-child {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.close {
  font-size: 40rpx;
  color: #9ca3af;
  cursor: pointer;
}

.modal-body {
  padding: 24rpx;
}

.file-info {
  margin-bottom: 24rpx;
  background-color: #f9fafb;
  padding: 16rpx;
  border-radius: 8rpx;
}

.info-item {
  display: flex;
  margin-bottom: 8rpx;
}

.info-label {
  font-weight: 500;
  margin-right: 16rpx;
  color: #4b5563;
  flex-shrink: 0;
}

.info-value {
  color: #1f2937;
}

.approval-options {
  margin-bottom: 24rpx;
}

.option-label {
  font-weight: 500;
  color: #4b5563;
  margin-bottom: 16rpx;
}

.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  background-color: #f9fafb;
  cursor: pointer;
}

.radio.selected {
  background-color: #ebf7fe;
}

.radio-dot {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 1rpx solid #d1d5db;
  position: relative;
}

.radio.selected .radio-dot::after {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #3b82f6;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.comment-area {
  margin-top: 24rpx;
}

textarea {
  width: 100%;
  height: 200rpx;
  padding: 16rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 24rpx;
  border-top: 1rpx solid #e5e7eb;
  background-color: #f9fafb;
}

.btn-cancel {
  padding: 16rpx 32rpx;
  background-color: #f3f4f6;
  color: #4b5563;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn-submit {
  padding: 16rpx 32rpx;
  background-color: #3b82f6;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn-submit[disabled] {
  background-color: #d1d5db;
  color: #9ca3af;
}