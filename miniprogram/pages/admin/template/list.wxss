/* pages/admin/template/list.wxss */

/* 基础容器样式 */
.container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
  box-sizing: border-box;
  /* 添加底部安全距离，确保内容不会被TabBar覆盖 */
  padding-bottom: calc(96rpx + env(safe-area-inset-bottom) + 20rpx);
}

/* 操作栏样式 */
.action-bar {
  margin-bottom: 30rpx;
  display: flex;
  justify-content: flex-end;
  position: sticky;
  top: 0;
  z-index: 10;
  background: #f5f7fa;
  padding: 10rpx 0;
}

.btn-upload {
  background-color: #10b981;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0 32rpx;
  height: 72rpx;
  transition: all 0.3s;
}

.btn-upload:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 模板列表样式 */
.template-list {
  display: grid;
  gap: 24rpx;
  margin-bottom: calc(96rpx + env(safe-area-inset-bottom));
}

.template-item {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  transition: transform 0.2s;
}

.template-item:active {
  transform: translateY(-2rpx);
}

.template-info {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.template-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 12rpx;
}

.template-desc {
  color: #6b7280;
  font-size: 26rpx;
  line-height: 1.4;
  display: block;
  margin-bottom: 16rpx;
}

.template-meta {
  display: block;
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 8rpx;
}

/* 模板操作按钮 */
.template-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
  flex-wrap: wrap;
}

.template-actions button {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
  transition: all 0.2s;
  flex-grow: 0;
}

.btn-download {
  background-color: #3b82f6;
  color: white;
}

.btn-view {
  background-color: #f59e0b;
  color: white;
}

.btn-delete {
  background-color: #ef4444;
  color: white;
}

/* 模态框公共样式 */
.modal-mask {
  background-color: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-height: 90vh;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 32rpx;
  background: #f8fafc;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.modal-header text:first-child {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.close {
  font-size: 48rpx;
  color: #94a3b8;
  padding: 0 16rpx;
}

/* 上传表单样式 */
.form-item {
  margin: 32rpx;
}

.label {
  display: block;
  color: #64748b;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

input, textarea {
  width: 100%;
  border: 1rpx solid #e2e8f0;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
}

.btn-choose {
  background-color: #e2e8f0;
  color: #64748b;
  font-size: 26rpx;
}

.file-name {
  margin-left: 16rpx;
  color: #475569;
  font-size: 26rpx;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #eee;
}

.btn-cancel {
  background-color: #f1f5f9;
  color: #64748b;
}

.btn-submit {
  background-color: #10b981;
  color: white;
}

/* 提交详情样式 */
.tabs {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  color: #94a3b8;
  position: relative;
}

.tab.active {
  color: #3b82f6;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 4rpx;
  background-color: #3b82f6;
}

.tab-content {
  flex: 1;
  overflow-y: auto;
  max-height: 60vh;
}

.submission-item, .user-item {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f1f5f9;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info text {
  display: block;
  margin-bottom: 8rpx;
  color: #475569;
}

.user-info text:first-child {
  font-weight: 500;
  color: #1e293b;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.btn-preview {
  background-color: #e0f2fe;
  color: #0ea5e9;
}

/* 响应式适配 */
@media (max-width: 480px) {
  .template-actions {
    flex-wrap: wrap;
    justify-content: flex-start;
  }
  
  .template-actions button {
    flex: 1 0 45%;
    margin-bottom: 12rpx;
  }

  .modal-content {
    width: 90%;
  }

  .submission-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }
}

/* 通用按钮交互 */
button {
  transition: all 0.2s ease;
}

button:active {
  opacity: 0.85;
  transform: scale(0.98);
}

/* 文字截断处理 */
.template-name,
.template-desc {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.template-name {
  -webkit-line-clamp: 1;
}

.template-desc {
  -webkit-line-clamp: 2;
}