/* pages/admin/template/list.wxss */
.container {
  padding: 20rpx;
  background-color: #f0f2f5;
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: calc(96rpx + env(safe-area-inset-bottom) + 20rpx);
}

/* 操作栏样式 */
.action-bar {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 10;
  background: #f0f2f5;
  padding: 10rpx 0;
}

.search-box {
  display: flex;
  flex: 1;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
  border: 1rpx solid #e5e7eb;
}

.search-btn {
  height: 72rpx;
  background: #1890ff;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-upload {
  background-color: #10b981;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0 32rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 表格样式 */
.table-container {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
}

.table-header {
  display: flex;
  background: #f9fafb;
  border-bottom: 1rpx solid #e5e7eb;
}

.th {
  padding: 24rpx 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  text-align: left;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #e5e7eb;
  transition: background-color 0.2s;
}

.table-row:last-child {
  border-bottom: none;
}

.table-row:hover, .table-row:active {
  background-color: #f3f4f6;
}

.td {
  padding: 24rpx 16rpx;
  font-size: 28rpx;
  color: #4b5563;
  text-align: left;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 表格列宽度设置 */
.th-name, .td-name {
  flex: 2;
  min-width: 200rpx;
}

.th-desc, .td-desc {
  flex: 3;
  min-width: 250rpx;
}

.th-date, .td-date {
  flex: 2;
  min-width: 180rpx;
}

.th-status, .td-status {
  flex: 2;
  min-width: 180rpx;
}

.th-actions, .td-actions {
  flex: 2;
  min-width: 200rpx;
  display: flex;
  justify-content: flex-end;
  gap: 10rpx;
}

/* 状态进度条样式 */
.status-text {
  display: block;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.status-progress {
  width: 100%;
}

/* 按钮样式 */
.btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  min-width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-download {
  background-color: #3b82f6;
  color: white;
}

.btn-delete {
  background-color: #ef4444;
  color: white;
}

/* 无数据提示 */
.no-data {
  padding: 60rpx 0;
  text-align: center;
  color: #9ca3af;
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #6b7280;
  font-size: 28rpx;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 24rpx;
  background: #f9fafb;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e5e7eb;
}

.modal-header text:first-child {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.close {
  font-size: 40rpx;
  color: #9ca3af;
  padding: 10rpx;
}

.form-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.form-item:last-of-type {
  border-bottom: none;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #4b5563;
}

input, textarea {
  width: 100%;
  padding: 16rpx;
  font-size: 28rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 6rpx;
  box-sizing: border-box;
}

textarea {
  height: 160rpx;
}

.btn-choose {
  background: #f3f4f6;
  color: #4b5563;
  border-radius: 6rpx;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  margin-bottom: 16rpx;
}

.file-name {
  display: block;
  font-size: 24rpx;
  color: #4b5563;
  word-break: break-all;
  padding: 12rpx;
  background: #f9fafb;
  border-radius: 6rpx;
  border-left: 4rpx solid #3b82f6;
}

.upload-progress {
  padding: 0 24rpx 24rpx;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 24rpx;
  background: #f9fafb;
  border-top: 1rpx solid #e5e7eb;
}

.btn-cancel {
  background: #f3f4f6;
  color: #4b5563;
  font-size: 28rpx;
  padding: 12rpx 32rpx;
  border-radius: 6rpx;
}

.btn-submit {
  background: #10b981;
  color: white;
  font-size: 28rpx;
  padding: 12rpx 32rpx;
  border-radius: 6rpx;
}

.btn-submit[disabled] {
  background: #d1d5db;
  color: #9ca3af;
}