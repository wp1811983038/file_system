.container {
  background-color: #f5f7fa;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: calc(96rpx + env(safe-area-inset-bottom));
}

/* 标签栏样式 */
.message-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 0;
  position: relative;
}

.tab.active {
  color: #1890ff;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

/* 消息列表样式 */
.message-list {
  flex: 1;
  padding: 20rpx;
}

.message-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.message-item.unread {
  background: #f0f7ff;
}

.message-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.message-icon.system {
  background: rgba(24, 144, 255, 0.1);
}

.message-icon.file_receive {
  background: rgba(82, 196, 26, 0.1);
}

.message-icon.file_process {
  background: rgba(250, 173, 20, 0.1);
}

.message-icon.inspection_notice {
  background: rgba(82, 93, 196, 0.1);
}

.message-icon image {
  width: 40rpx;
  height: 40rpx;
}

.message-content {
  flex: 1;
  overflow: hidden;
}

.message-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.message-preview {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.message-time {
  font-size: 24rpx;
  color: #999;
}

.unread-dot {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #f5222d;
}

/* 加载更多提示 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 无数据提示 */
.no-data {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 底部操作栏 */
.bottom-bar {
  padding: 20rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-mark-all-read {
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 16rpx 0;
}
.message-icon.feedback {
  background: rgba(194, 82, 196, 0.1);
}
