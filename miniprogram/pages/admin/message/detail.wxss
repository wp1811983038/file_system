.container {
  padding: 30rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

/* 消息头部 */
.message-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.message-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.message-icon.system {
  background: rgba(24, 144, 255, 0.1);
}

.message-icon.file_receive {
  background: rgba(82, 196, 26, 0.1);
}

.message-icon.file_process {
  background: rgba(250, 173, 20, 0.1);
}

.message-icon.inspection_notice {
  background: rgba(82, 93, 196, 0.1);
}

.message-icon.feedback {
  background: rgba(194, 82, 196, 0.1);
}

.message-icon image {
  width: 50rpx;
  height: 50rpx;
}

.message-meta {
  flex: 1;
}

.message-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.message-time {
  font-size: 26rpx;
  color: #999;
}

/* 消息内容 */
.message-content {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.message-content text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
}

/* 关联信息 */
.related-info, .related-feedback, .related-file {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.related-title, .section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
}

.info-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.info-value.status-approved {
  color: #52c41a;
}

.info-value.status-rejected {
  color: #f5222d;
}

.info-value.status-pending {
  color: #faad14;
}

.info-value.status-completed {
  color: #52c41a;
}

.info-value.status-processing {
  color: #1890ff;
}

.info-value.status-resolved {
  color: #52c41a;
}

/* 操作按钮 */
.action-btns {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.btn-view, .btn-download {
  min-width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  border-radius: 8rpx;
}

.btn-view {
  background: #1890ff;
  color: #fff;
}

.btn-download {
  background: #faad14;
  color: #fff;
}

/* 问题列表样式 */
.problem-section {
  margin-top: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 10rpx;
  bottom: 10rpx;
  width: 6rpx;
  background: #1890ff;
  border-radius: 3rpx;
}

.problem-list {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.problem-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.problem-item:last-child {
  border-bottom: none;
}

.problem-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.problem-type {
  font-size: 28rpx;
  font-weight: 500;
}

.problem-severity {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.severity-high {
  background: #ffccc7;
  color: #f5222d;
}

.severity-medium {
  background: #fff7e6;
  color: #fa8c16;
}

.severity-low {
  background: #f6ffed;
  color: #52c41a;
}

.problem-description {
  font-size: 28rpx;
  color: #666;
}

/* 照片列表样式 */
.photo-list, .photo-section {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.photo-item {
  width: calc(33.33% - 20rpx);
  margin: 10rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.photo-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.photo-description {
  padding: 10rpx;
  font-size: 24rpx;
  color: #666;
  background: rgba(255,255,255,0.9);
}

/* 反馈相关样式 */
.related-feedback {
  margin-top: 20rpx;
}

.content-text {
  white-space: pre-wrap;
  margin-top: 10rpx;
  display: block;
}

.full-width {
  flex-direction: column;
  align-items: flex-start;
}

.feedback-images {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

/* 反馈详情增强样式 */
.content-section, .reply-section {
  margin-top: 20rpx;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.content-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 16rpx;
}

.content-box, .reply-box {
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
}

.content-text, .reply-text {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
  white-space: pre-wrap;
  line-height: 1.6;
}

.reply-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: right;
}

.info-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}