.container {
  padding: 20rpx;
  background: #f5f5f5;
}

/* 统计卡片样式 */
.stats-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  background: #fff;
  padding: 40rpx 30rpx;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  transition: transform 0.3s ease;
}

.stat-card:active {
  transform: scale(0.98);
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #1890ff;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
  display: block;
}

/* 最近活动样式 */
.recent-activity {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.activity-list {
  min-height: 200rpx;
}

.loading, .no-data {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.activity-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-info {
  flex: 1;
  margin-right: 20rpx;
}

.activity-user {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-right: 12rpx;
}

.activity-action {
  font-size: 28rpx;
  color: #666;
}

.activity-time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}
/* 表格样式 */
.table-container {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.table-header {
  display: flex;
  background-color: #fafafa;
  border-bottom: 1rpx solid #e8e8e8;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #e8e8e8;
}

.table-row:last-child {
  border-bottom: none;
}

.th, .td {
  padding: 24rpx;
  text-align: left;
  flex: 1;
}

.th {
  font-weight: 500;
  color: #666;
  font-size: 28rpx;
}

.td {
  font-size: 28rpx;
  color: #333;
}

.table-row:hover {
  background-color: #fafafa;
}

.no-data {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  background: #fff;
}

/* 消息通知区域样式 */
.message-container {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.more-link {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: normal;
}

.message-list {
  min-height: 100rpx;
}

.message-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.message-item:last-child {
  border-bottom: none;
}

.message-item.unread {
  background-color: rgba(24, 144, 255, 0.05);
}

.message-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.message-icon.system {
  background: rgba(24, 144, 255, 0.1);
}

.message-icon.file_receive {
  background: rgba(82, 196, 26, 0.1);
}

.message-icon.file_process {
  background: rgba(250, 173, 20, 0.1);
}

.message-icon.inspection_notice {
  background: rgba(82, 93, 196, 0.1);
}

.message-icon image {
  width: 36rpx;
  height: 36rpx;
}

.message-content {
  flex: 1;
  overflow: hidden;
}

.message-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.message-preview {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.message-time {
  font-size: 22rpx;
  color: #999;
}

.unread-dot {
  position: absolute;
  top: 20rpx;
  right: 10rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #f5222d;
}

.no-data {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}