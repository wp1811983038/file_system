page {
  background-color: #f5f7fa;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 头部样式 */
.profile-header {
  height: 400rpx;
  width: 100%;
  position: relative;
  background-size: cover;
  background-position: center;
  overflow: hidden;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.7));
  z-index: 1;
}

.user-info {
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  z-index: 2;
}

.user-name {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.user-role {
  font-size: 26rpx;
  color: #ffffff;
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  display: inline-block;
}

/* 信息卡片样式 */
.info-card {
  background: #fff;
  margin: -60rpx 30rpx 30rpx;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 10;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.info-divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 30rpx 0;
}

.info-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #888;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.clickable {
  color: #1890ff;
}

.address-text {
  flex: 1;
  word-break: break-all;
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 30rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.action-icon image {
  width: 32rpx;
  height: 32rpx;
}

.call-icon {
  background: rgba(82, 196, 26, 0.1);
}

.map-icon {
  background: rgba(24, 144, 255, 0.1);
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  gap: 30rpx;
  padding: 0 30rpx;
  margin-top: 40rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 8rpx;
}

.edit-btn {
  background: #1890ff;
  color: #fff;
}

.delete-btn {
  background: #ff4d4f;
  color: #fff;
}