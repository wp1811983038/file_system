.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
  /* 添加底部安全距离，确保内容不会被TabBar覆盖 */
  padding-bottom: calc(96rpx + env(safe-area-inset-bottom) + 20rpx);
}

/* 优化页面滚动 */
page {
  height: 100%;
  overflow-y: auto;
  box-sizing: border-box;
}

/* 搜索框样式 */
.search-box {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.search-type {
  padding: 12rpx 24rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  font-size: 28rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  min-width: 200rpx;
  padding: 12rpx;
  border: 1px solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  border-radius: 4rpx;
  flex-shrink: 0;
}

.add-btn {
  background: #52c41a;
  color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  border-radius: 4rpx;
  flex-shrink: 0;
}

/* 卡片列表样式 */
.card-list {
  padding: 15rpx 0;
}

.user-card {
  margin: 20rpx;
  border-radius: 12rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: stretch;
  transition: all 0.3s;
  overflow: hidden;
}

.user-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

/* 用户头像 */
.user-avatar {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  border: 1rpx solid #eaeaea;
  flex-shrink: 0;
  border-radius: 0;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 用户信息 */
.user-info {
  flex: 1;
  padding: 24rpx;
  overflow: hidden;
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.user-company {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.user-phone {
  font-size: 26rpx;
  color: #1890ff;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 16rpx;
  padding: 0 24rpx;
  background-color: #f9f9f9;
}

.action-btn {
  padding: 10rpx 24rpx;
  font-size: 24rpx;
  line-height: 1.5;
  border-radius: 6rpx;
  margin: 0;
  min-width: 120rpx;
}

.edit-btn {
  background: #1890ff;
  color: #fff;
}

.delete-btn {
  background: #ff4d4f;
  color: #fff;
}

.no-data {
  text-align: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  position: relative;
  width: 85%;
  max-width: 600rpx;
  background: white;
  border-radius: 12rpx;
  z-index: 1001;
  display: flex;
  flex-direction: column;
  max-height: 80vh;
  overflow: hidden;
  margin-bottom: 120rpx;
}

.modal-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e5e7eb;
  background: white;
}

.close {
  font-size: 40rpx;
  line-height: 1;
  padding: 8rpx 16rpx;
  color: #9ca3af;
  cursor: pointer;
}

.modal-body {
  flex: 1;
  max-height: calc(80vh - 180rpx);
  overflow-y: auto;
  padding: 30rpx 24rpx 20rpx;
}

.form-item {
  margin-bottom: 24rpx;
  display: flex;
  align-items: flex-start;
}

.form-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  padding-top: 10rpx;
}

.input-wrapper {
  flex: 1;
  width: 300rpx;
}

.form-input {
  width: 300rpx;
  height: 70rpx;
  border: 1px solid #e0e0e0;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.password-input-group {
  position: relative;
  width: 100%;
}

.password-toggle {
  position: absolute;
  top: 0;
  right: 0;
  height: 80rpx;
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.eye-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.7;
}

/* 按钮样式 */
.form-actions {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 40rpx;
  padding-bottom: 20rpx;
}

.btn-small {
  min-width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  margin: 0;
  padding: 0 30rpx;
}

.btn-small.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-small.confirm {
  background-color: #1890ff;
  color: #fff;
}

/* 表单区块样式 */
.form-section {
  margin-bottom: 30rpx;
  padding-bottom: 10rpx;
}

.section-title {
  font-size: 30rpx;
  color: #1890ff;
  font-weight: 500;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 1px solid #f0f0f0;
}

.form-label.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 4rpx;
}

.error-tip {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 6rpx;
}

.switch-item {
  margin-top: 10rpx;
}

.switch-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.switch-wrapper switch {
  transform: scale(0.8);
  margin-right: 10rpx;
}

.switch-hint {
  font-size: 24rpx;
  color: #666;
}