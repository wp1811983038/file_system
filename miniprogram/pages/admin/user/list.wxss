.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
  /* 添加底部安全距离，确保内容不会被TabBar覆盖 */
  padding-bottom: calc(96rpx + env(safe-area-inset-bottom) + 20rpx);
}

/* 优化页面滚动 */
page {
  height: 100%;
  overflow-y: auto;
  box-sizing: border-box;
}

/* 搜索框样式 */
.search-box {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.search-type {
  padding: 12rpx 24rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  font-size: 28rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  min-width: 200rpx;
  padding: 12rpx;
  border: 1px solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  border-radius: 4rpx;
  flex-shrink: 0;
}

.add-btn {
  background: #52c41a;
  color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  border-radius: 4rpx;
  flex-shrink: 0;
}

/* 表格样式 */
.table-container {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: calc(96rpx + env(safe-area-inset-bottom) + 20rpx);
}

.table-header {
  display: flex;
  background: #fafafa;
  border-bottom: 1px solid #e8e8e8;
  position: sticky;
  top: 0;
  z-index: 5;
}

.table-row {
  display: flex;
  border-bottom: 1px solid #e8e8e8;
}

.table-row:last-child {
  border-bottom: none;
}

.th, .td {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  text-align: left;
  word-break: break-all;
}

.th {
  font-weight: 500;
  color: #666;
}

.actions {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.action-btn {
  padding: 8rpx 24rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  line-height: 1.5;
  border: none;
  flex-shrink: 0;
}

.edit-btn {
  background: #1890ff;
  color: #fff;
}

.delete-btn {
  background: #ff4d4f;
  color: #fff;
}

.no-data {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 模态框样式修改 - 固定底部按钮 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  position: relative;
  width: 85%;
  max-width: 600rpx;
  background: white;
  border-radius: 12rpx;
  z-index: 1001;
  display: flex;
  flex-direction: column;
  max-height: 85vh; /* 略微减小最大高度 */
  overflow: hidden; /* 防止内容溢出 */
}

.modal-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e5e7eb;
  background: #f9fafb;
}

.modal-header text:first-child {
  font-size: 32rpx;
  font-weight: 600;
}

.close {
  font-size: 40rpx;
  line-height: 1;
  padding: 8rpx 16rpx;
  color: #9ca3af;
  cursor: pointer;
}

.modal-body {
  flex: 1;
  max-height: calc(85vh - 180rpx); /* 减去header和footer的高度 */
  overflow-y: auto; /* 内容可滚动 */
  padding: 24rpx 24rpx 0; /* 底部padding改为0 */
}

.modal-footer {
  padding: 24rpx;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  border-top: 1rpx solid #e5e7eb;
  background: #f9fafb;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #4b5563;
  margin-bottom: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 6rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.password-input-group {
  position: relative;
  width: 100%;
}

.password-toggle {
  position: absolute;
  top: 0;
  right: 0;
  height: 80rpx;
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.eye-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.7;
}

.btn {
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 6rpx;
  margin: 0; /* 重置按钮默认边距 */
}

.cancel {
  background: #f3f4f6;
  color: #4b5563;
}

.confirm {
  background: #1890ff;
  color: white;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.form-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #333;
}

.input-wrapper {
  flex: 1;
  max-width: 400rpx;
}

.form-input {
  width: 100%;
  height: 70rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

/* 按钮样式 */
.form-actions {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn-small {
  min-width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  margin: 0;
  padding: 0 30rpx;
}

.btn-small.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-small.confirm {
  background-color: #3498db;
  color: #fff;
}