.container {
  padding: 20rpx;
  background: #f5f5f5;
  /* 添加底部安全距离，确保内容不会被TabBar覆盖 */
  padding-bottom: calc(96rpx + env(safe-area-inset-bottom) + 20rpx);
}

/* 优化页面滚动 */
page {
  height: 100%;
  overflow-y: auto;
  box-sizing: border-box;
}

/* 搜索框样式 */
.search-box {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.search-type {
  padding: 12rpx 24rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  font-size: 28rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  min-width: 200rpx;
  padding: 12rpx;
  border: 1px solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  border-radius: 4rpx;
  flex-shrink: 0;
}

.add-btn {
  background: #52c41a;
  color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  border-radius: 4rpx;
  flex-shrink: 0;
}

/* 表格样式 */
.table-container {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: calc(96rpx + env(safe-area-inset-bottom) + 20rpx);
}

.table-header {
  display: flex;
  background: #fafafa;
  border-bottom: 1px solid #e8e8e8;
  position: sticky;
  top: 0;
  z-index: 5;
}

.table-row {
  display: flex;
  border-bottom: 1px solid #e8e8e8;
}

.table-row:last-child {
  border-bottom: none;
}

.th, .td {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  text-align: left;
  word-break: break-all;
}

.th {
  font-weight: 500;
  color: #666;
}

.actions {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.action-btn {
  padding: 8rpx 24rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  line-height: 1.5;
  border: none;
  flex-shrink: 0;
}

.edit-btn {
  background: #1890ff;
  color: #fff;
}

.delete-btn {
  background: #ff4d4f;
  color: #fff;
}

.no-data {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 80%;
  max-height: 90vh;
  background: #fff;
  border-radius: 8rpx;
  padding: 30rpx;
  overflow-y: auto;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 4rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.modal-btns {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn {
  padding: 0 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.cancel {
  background: #f5f5f5;
  color: #666;
}

.confirm {
  background: #1890ff;
  color: #fff;
}

/* 密码输入框组样式 */
.password-input-group {
  position: relative;
  display: flex;
  align-items: center;
}

.password-toggle {
  position: absolute;
  right: 20rpx;
  top: 0;
  height: 80rpx;
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.eye-icon {
  width: 44rpx;
  height: 44rpx;
  opacity: 0.7;
}